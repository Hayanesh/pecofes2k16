<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/test"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context="com.hayanesh.pecofes.MainActivity">


        <android.support.v7.widget.CardView
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/side_nav_bar">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_marginTop="56dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitXY"
                android:src="@drawable/logo_comp" />

           <ImageView
               android:id="@+id/motto"
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:layout_below="@+id/thumbnail"
               android:src="@drawable/pecofes"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/motto"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:gravity="center_horizontal"
                android:text="An annual cultural extravaganza organized by Pondicherry Engineering College \n on \n Sep 14,15,16"

                android:textSize="20dp"
                android:textColor="#36241f"
                android:id="@+id/title_des" />
            </RelativeLayout>
            </android.support.v7.widget.CardView>

</RelativeLayout>
